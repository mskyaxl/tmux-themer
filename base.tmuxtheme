#{@themer-txt-format2}"
set -g @themer-style11 "fg=#{@themer-color1},bg=#{@themer-color6},\
#{@themer-txt-format2}"


set -g @themer-date "%Y-%m-%d"
set -g @themer-hour "%H:%M"
set -go @themer-host "#h"

#status-left
set -gF @themer-left-start-blockA "#[#{@themer-style1}]"
